<% provide(:title, "Login") %>
<div class="container">
  <h1>Login</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path, local: true) do |f| %>
        <div class="form-group">
          <%= User.human_attribute_name(:email) %>
          <%= f.email_field :email, class: 'form-control', id: 'user_email' %>
        </div>
        <div class="form-group">
          <%= User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control', id: 'user_password' %>
        </div>
        <div class="form-group">
          <%= f.label :remrmber_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t('.remember_me') %></span>
          <% end %>
        </div>
        <%= f.submit class: 'btn btn-primary session-new-submit-btn' %>
      <% end %>
      <div class="session-new-guest-login">
        <p>ゲストユーザでログインします</p>
        <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "btn btn-danger" %>
      </div><!-- .sessions-new-guest-login -->
      <div class="session-new-other-link">
        <p>ユーザー登録されていない方は<%= link_to 'こちら', signup_path %></p>
        <p>パスワードをお忘れの方は<%= link_to 'こちら', '#' %></p>
      </div><!-- .session-new-other-link -->
    </div><!-- .col-md-6.col-md-offset-3 -->
  </div><!-- .row -->
</div><!-- .container -->
