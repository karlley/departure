<% provide(:title, @title) %>
<h1><%= @title %></h1>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= gravatar_for @user %>
        <p><%= @user.name %></p>
        <p><%= link_to "Profile", @user %></p>
        <p><b>行き先 </b><%= @user.destinations.count %></p>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>
