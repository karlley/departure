<% provide(:title, @title) %>
<div class="container user-follow-wrapper">
  <% if controller.action_name == "following" %>
    <h1>Following / <%= link_to "Followers", followers_user_path(@user) %></h1>
  <% elsif controller.action_name == "followers" %>
    <h1><%= link_to "Following", following_user_path(@user) %> / Followers</h1>
  <% end %>

  <div class="user-follow-stats-wrapper">
    <div class="user-follow-stats-flex">
      <div class="user-follow-stats-name">
        <p><%= @user.name %></p>
      </div><!-- .user-follow-stats-name -->
      <div class="user-follow-stats-count">
        <div class="user-follow-stats-followers">
          <p id="followers">フォロワー <%= @user.followers.count %>人</p>
        </div><!-- .user-follow-stats-followers -->
        <div class="user-follow-stats-following">
          <p id="following">フォロー <%= @user.following.count %>人</p>
        </div><!-- .user-follow-stats-following -->
      </div><!-- .user-follow-stats-count -->
    </div><!-- .user-follow-stats-flex -->
  </div><!-- .user-follow-stats-wrapper -->

  <% if @relationship_users.any? %>
    <ul class="user-follow-list-wrapper">
      <% #@relationship_users を変数relationship_user としてパーシャル_relationship_userに渡してループを回す %>
      <%= render partial: "users/relationship_user", collection: @relationship_users %>
    </ul><!-- .user-follow-list-wrapper -->
    <div class="pagination-wrapper">
    <%= will_paginate @relationship_users %>
    </div><!-- .pagination-wrapper -->
  <% end %>

</div><!-- .container .user-follow-wrapper -->
