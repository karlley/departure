<div class="follow-form-wrapper" id="list_follow_form_<%= relationship_user.id %>">
    <% if current_user.following?(relationship_user) %>
      <% # フォロー中/フォロワーのユーザ情報、表示ページのユーザ情報をパーシャルに渡す %>
      <%= render partial: "users/list_unfollow", locals: { relationship_user: relationship_user } %>
    <% else %>
      <% # フォロー中/フォロワーのユーザ情報、表示ページのユーザ情報をパーシャルに渡す %>
      <%= render partial: "users/list_follow", locals: { relationship_user: relationship_user } %>
    <% end %>
  </div><!-- .follow-form-wrapper #list_follow_form -->
