<header>
  <nav class="navbar navbar-inverse navbar-fixed-top no-border">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Departure", root_url, class: "navbar-brand" %>
      </div><!-- navbar-header -->

      <div class="navbar-collapse collapse" id="navbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ホーム", root_path %></li>
          <li><%= link_to "Departure とは?", about_path %></li>
          <% if logged_in? %>
            <li><%= link_to "お気に入り", favorites_path %></li>
            <li><%= link_to "シェア", new_destination_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">マイページ <i class="fas fa-angle-down"></i></a>
              <ul class="dropdown-menu">
                <li>
                <%= link_to current_user do %>
                  プロフィール <span class="navbar-current-user-name">[ <%= current_user.name %> ]</span>
                <% end %>
                </li>
                <li class="divider"></li>
                <% if current_user.notification == true %>
                  <li class="new_notification header-link"><%= link_to notifications_path do %>通知<% end %></li>
                <% else %>
                  <li class="no_notification header-link"><%= link_to notifications_path do %>通知<% end %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
              </ul>
            <% else %>
              <li><%= link_to "サインアップ", signup_path %></li>
              <li><%= link_to "ログイン", login_path %></li>
            <% end %>
        </ul>
        <% if logged_in? %>
          <%= search_form_for @q, html: { class: "navbar-form navbar-right" }  do |f| %>
            <%= f.search_field :name_or_spot_or_address_cont, placeholder: "旅先を探す", class: "form-control", id: "header_keyword_search" %>
          <% end %>
        <% end %>
      </div><!-- .navbar-clllapse .collapse -->

    </div><!-- .container -->
  </nav>
</header>
