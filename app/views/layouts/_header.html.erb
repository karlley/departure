<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to(image_tag("header_logo.jpg", :alt => ""), root_url, id: 'logo') %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "What's Departure?", about_path %></li>
        <% if logged_in? %>
          <% if current_user.notification == true %>
            <li class="new_notification header-link">
          <% else %>
            <li class="no_notification header-link">
          <% end %>
          <%= link_to notifications_path do %>Notifications<% end %></li>
          <li><%= link_to 'Favorites', favorites_path %></li>
          <li><%= link_to 'All Users', users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Page<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Signup", signup_path %></li>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
