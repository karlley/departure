<div class="container search-bar">
  <div class="row">
    <%= search_form_for @q do |f| %>
      <div class="col-md-9">
        <div class="form-group">
          <%= f.search_field :name_cont, placeholder: "Search for Destination...", class: "form-control font-awesome" %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
