<% if @user.blank? %>
  <% # users/show %>
  $("#follow_form").html("<%= escape_javascript(render partial: 'users/unfollow', locals: { user: @follow_user }) %>");
  $("#followers").html('<%= @follow_user.followers.count %>');
<% else %>
  <% # users/show_follow %>
  $("#list_follow_form_<%= @follow_user.id %>").html("<%= escape_javascript(render partial: 'users/list_unfollow', locals: { relationship_user: @follow_user }) %>");
  $("#followers").html('フォロワー <%= @user.followers.count %>人');
  $("#following").html('フォロー <%= @user.following.count %>人');
<% end %>
