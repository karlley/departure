<% provide(:title, "Edit Destination") %>
<h1>Edit <%= @destination.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@destination) do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <span class="picture">
          <%= f.label :picture %><span class="input-unneed"> *Requred</span>
          <%= f.file_field :picture, accept: "image/jpeg, image/png", class: "form-control", id: "destination-picture" %>
          <%= image_tag(@destination.picture.thumb400.url) if @destination.picture.url.present? %>
        </span>
        <div class="form-group">
          <%= f.label :name %><span class="input-need"> *Required</span>
          <%= f.text_field :name, class: "form-control", id: "destination_name" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><span class="input-unneed"> *Optional</span>
          <%= f.text_field :description, size: "60x4", class: "form-control", id: "destination_description" %>
        </div>
        <div class="form-group">
          <%= f.label :country %><span class="input-need"> *Required</span>
          <%= f.text_field :country, class: "form-control", id: "destination_country" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "行き先を削除する", destination_path(@destination), method: :delete, data: { confirm: "Are you sure?" } %> 
      <% end %>
    </div>
  </div>
</div>
